<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserSqlMap">
<!--  1  -->
    <insert id="InsertUser">
        INSERT INTO "USERS" VALUES(DEFAULT, #{user_Name}, #{user_age}, #{user_gender});
    </insert>
<!--  2  -->
    <update id="UpdateUser">
        UPDATE "USERS"
        SET "USER_NAME"=#{user_Name}, "USER_AGE"=#{user_age}, "USER_GENDER"=#{user_gender}
        WHERE "USER_ID"=#{user_Id}
    </update>
<!--  3  -->
    <delete id="DeleteUser">
        DELETE FROM "USERS" WHERE "USER_ID"=#{user_Id}
    </delete>
<!--  4  -->
    <select id="SelectUser" resultType="java.util.HashMap">
        SELECT * FROM "USERS"
    </select>
</mapper>